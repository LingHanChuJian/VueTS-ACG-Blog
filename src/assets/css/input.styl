.input
    display inline-block
    width 100%
    position relative
    vertical-align middle

.input-container
    display inline-block
    position relative
    width 100%
    height 32px
    border 1px solid $border-color
    border-radius 4px
    padding 4px 7px
    background-color #FFFFFF
    cursor text
    white-space pre-wrap
    word-wrap break-word
    transition border .2s ease-in-out, background .2s ease-in-out, box-shadow .2s ease-in-out

.input-container::-moz-placeholder
.input-container:-ms-input-placeholder
.input-container::-webkit-input-placeholder
    color $placeholder-color

.input-container:hover
.input-container:focus
    border-color $font-color-hover

.input-container:focus
    outline 0
    box-shadow 0 0 0 1px rgba(34, 153, 221, .4)

.input:hover .input-clearable
.input:focus .input-clearable
    display inline-block

.input-label
    top 0
    position absolute
    color $placeholder-color
    transition all .25s
    pointer-events none
    transform-origin 0 0

.input-pre
    margin 0
    width 100%
    padding 12px 10px 0 10px
    white-space pre-wrap
    word-wrap break-word
    font-family inherit
    visibility hidden

.input-large
    padding 6px 7px
    height 36px

.input-small
    padding 1px 7px
    height 28px

.input-clearable
    display none
    position absolute
    right 0
    top 0
    cursor pointer

.input-disabled
    cursor not-allowed
    background-color #f3f3f3
    color #CCCCCC
    &:hover
    &:focus
        border-color #e3e5e8

.input-group
    display flex
    .input-group-prepend
    .input-exist-append
        border-top-right-radius 0
        border-bottom-right-radius 0
    .input-group-append
    .input-exist-prepend
        border-bottom-left-radius 0
        border-top-left-radius 0

.input-group-append
.input-group-prepend
    padding 4px 7px
    font-size inherit
    border-radius 4px
    border 1px solid $border-color
    text-align center
    background-color #f8f8f9
    i
        width 32px

.input-group-prepend
    border-right 0

.input-group-append
    border-left 0

.auto-textarea
    top 0
    left 0
    width 100%
    height 100%
    position absolute
    overflow hidden
    resize none
    
.textarea-container
    padding 12px 10px 0 10px
