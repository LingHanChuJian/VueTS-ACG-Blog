.menu
    margin 0
    padding 0
    display flex
    list-style none
    position relative

.menu-horizontal
    height 75px
    line-height 75px

.menu-item,
.menu-submenu
    color #666666
    padding 0 20px
    display block
    list-style none
    cursor pointer
    transition all .2s ease-in-out
    & i
        margin-right 8px


.collapse-transition
    transition 2s height ease-in-out,.2s padding-top ease-in-out,.2s padding-bottom ease-in-out

@keyframes HorizontalMenuFadeIn
    0%
        opacity 0
        transform translateX(30px)
    100%
        opacity 1
        transform translateX(0)
