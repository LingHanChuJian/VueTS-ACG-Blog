$poptip-color = #FFFFFF

hidden-transform(placement)
    if placement == 'top'
        transform translateY(-20px)
    else if placement == 'bottom'
        transform translateY(20px)
    else if placement == 'left'
        transform translateX(-20px)
    else if placement == 'right'
        transform translateX(20px)

.poptip
    display inline-block

.poptip-rel
    display inline-block
    position relative

.poptip-popper
    z-index 999
    position absolute
    .poptip-box
        border-radius 5px
        padding 15px 10px
        position relative
        background-color $poptip-color
        box-shadow $box-shadow
        transition transform .3s ease-in-out, opacity .3s ease-in-out, visibility .3s ease-in-out
        .poptip-arrow
            border-width 10px
            border-style solid
        for item in top right bottom left 
            &[data-placement^={item}]
                margin-{opposite-position(item)} 10px !important
                .poptip-arrow
                    {opposite-position(item)} -19px
                    for border-item in top right bottom left
                        if border-item == item
                            border-{border-item}-color $poptip-color
                        else
                            border-{border-item}-color transparent
        &[data-state="hidden"]
            opacity 0
            for item in top right bottom left
                &[data-placement^={item}]
                    hidden-transform(item)

.poptip-content
    line-height normal

.poptip-popper-word-wrap
    white-space pre-wrap
    text-align justify
