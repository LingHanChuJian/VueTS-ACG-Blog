icon-font(content, size = 16px, color = $font-color)
    content content
    font-family 'Font Awesome 5 Brands', 'Font Awesome 5 regular', 'Font Awesome 5 solid'
    font-size size
    color color

.markdown
    line-height 1.5
    margin 10px 0
    h1
        font-size 2em
    h2
        font-size 1.5em
        &:after
            position absolute
            margin-left 6px
            icon-font('\f1dd', 1em, #ff6d6d)
    h3
        padding 0 0 8px 20px
        font-size 1.33em
        border-bottom 1px dashed $font-color
    h4
        font-size 1.17em
        padding-left 16px
        &:after
            content ''
            width 6px
            height 26px
            left 5px
            position absolute
            background-color #ff6d6d
    h5
        font-size 0.9em
        padding-left 16px
    h3
    h5
        &:after
            position absolute
            left 0
            content '#'
            color #ff6d6d
            font-size 1em
    ol
    ul
        padding-left 2em
    ol
    ul
    p
        code
            background-color rgba(254,250,199,1)
            color #e67474
            text-shadow none
            border-radius 5px
            font-size 16px
            padding 2px 4px
            display inline
            font-weight 600
    ol
        li
            list-style-type decimal
    ul
        li
            list-style-type disc
    img
        max-width 100%
        height auto
    a 
        color #e67474
        text-decoration none
        transition color .25s ease-out
        position relative
        &:after
            content ''
            position absolute
            width 100%
            transform scaleX(0)
            height 2px
            bottom 0
            left 0
            background-color orange
            transform-origin bottom right
            transition transform .25s ease-out
        &:hover
            color #FE9600
            &:after
                transform scaleX(1)
                transform-origin bottom left
    i
    cite
    em
    var
    address
    dfn
    dt
        font-style italic
    strong
    b
        font-weight bold
    hr 
        margin 24px 0
        border 0
        height 1px
        border-top 1px solid #CCCCCC
    del
    dl
    dd
    p
        margin-bottom 16px
    dt
        margin-top 16px
        font-size 1em
        font-weight bold
    blockquote
        padding 24px 30px
        position relative
        &:before
            position absolute
            top 0
            left 0 
            icon-font('\f10d', 1.5rem, #69d2e7)
        &:after
            position absolute
            bottom 0
            right 0
            icon-font('\f10e', 1.5rem, #69d2e7)
    pre 
        position relative
        padding-top 30px
        background-color #1d1f21
        box-shadow 0 10px 30px 0px rgba(0,0,0,.4)
        border-radius 5px
        display flex
        .copy-code
            color #FFFFFF
            position absolute
            right 10px
            top 8px
            cursor pointer
            font-style normal
        .amplification-code
            color #FFFFFF
            position absolute
            right 30px
            top 8px
            cursor pointer
            font-style normal
        code
            background-color #1d1f21
            color #FFFFFF
            padding 8px 5px
            font-size 15px
            word-break break-word
            font-weight normal
            border-radius 0 0 5px 5px
            width 100%
            &:before
                color #FFFFFF
                content attr(data-lang)
                height 30px
                line-height 30px
                background-color #21252b
                font-size 16px
                position absolute
                top 0
                left 0
                right 0
                font-weight 700
                text-indent 15px
                text-align center
                font-family Ubuntu, sans-serif
                border-radius 5px 5px 0 0
                pointer-events none
            table
                margin 5px 0 0 0
                padding 0
                width 100%
                border-spacing 0
                border none
                tr
                    height 24px
                td
                    padding 0
                    border none
    table
        width 100%
        border 1px solid #e9e9e9
        border-spacing 0
        margin-bottom 24px
        border-collapse collapse
        th
            background-color #f7f7f7
        th
        td
            padding 8px 16px
            border 1px solid rgb(233, 233, 233)
    div[data-aplayer]
    div[data-dplayer]
        margin 10px 0 15px 0
        a:after
            transition none
            background-color transparent 

.hljs-ln-numbers
    user-select none
    text-align center
    color #888f96
    vertical-align top
    left 0
    width 30px
    line-height 24px

.hljs-ln-code
    text-align inherit
    padding-left 5px
    color #FFFFFF
    font-family sans-serif
    font-size 16px
    cursor text
    &:hover
        background-color rgba(255,255,255,.1)
    .hljs-doctag
    .hljs-formula
    .hljs-keyword
        color #c678dd
    .hljs-comment
    .hljs-quote
        color #888f96
        font-style italic
    .hljs-addition
    .hljs-attribute
    .hljs-meta-string
    .hljs-regexp
    .hljs-string
        color #98c379
    .hljs-deletion
    .hljs-name
    .hljs-section
    .hljs-selector-tag
    .hljs-subst
        color #e06c75
    .hljs-literal
        color #56b6c2
    .hljs-built_in
    .hljs-class .hljs-title
        color #e6c07b
    .hljs-attr
    .hljs-number
    .hljs-selector-attr
    .hljs-selector-class
    .hljs-selector-pseudo
    .hljs-template-variable
    .hljs-type
    .hljs-variable
        color #d19a66
    .hljs-bullet
    .hljs-link
    .hljs-meta
    .hljs-selector-id
    .hljs-symbol
    .hljs-title
        color #61aeee
    .hljs-emphasis
        font-style italic
    .hljs-strong
        font-weight 700
    .hljs-link
        text-decoration underline

.html-fullscreen
    overflow hidden

.pre-fullscreen
    position fixed !important
    top 0
    left 0
    bottom 0
    margin 0
    width 100%
    z-index 9999999
    overflow auto
    animation animation-elastic 1s
    code
        --widthA 100%
        --widthB calc(var(--widthA) - 30px)
        height var(--widthB)
        min-height 99%
        height auto
        overflow initial !important

@keyframes animation-elastic
    0%
        transform scale(0)
    55%
        transform scale(1)
    70%
        transform scale(.98)
    100%
        transform scale(1)